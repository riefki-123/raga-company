---
// Hero Section
---

<section id="hero" 
  class="min-h-screen text-white flex items-center justify-center relative overflow-hidden"
  style="background-image: url('main.jpg'); background-size: cover; background-position: center;">
	
	<div class="container mx-auto px-4 py-20 text-center relative z-10">
		<!-- RAGA Logo Placeholder -->
		<div class="mb-8 animate-fade-in">
			<div class="w-48 h-48 md:w-64 md:h-64 mx-auto bg-white/20 rounded-2xl flex items-center justify-center backdrop-blur-sm">
				<img src="raga-new.png" alt="Logo RAGA">
			</div>
		</div>
		
		<!-- Title and Tagline -->
		<div class="animate-slide-up">
			<h2 class="text-xl md:text-2xl lg:text-3xl font-light mb-4 opacity-90">
				Real-time Action Gesture Automator
			</h2>
			<p class="text-lg md:text-xl lg:text-2xl mb-12 max-w-4xl mx-auto opacity-90">
				Mainkan Tekken 6 hanya dengan gerakan tubuhmu!
			</p>
		</div>
		
		<!-- CTA Buttons -->
		<div class="flex flex-col sm:flex-row gap-4 justify-center items-center animate-fade-in">
			<a href="#demo" class="bg-white text-raga-green px-8 py-4 rounded-full font-semibold text-lg hover:bg-gray-100 transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-1">
				<i class="fas fa-play mr-2"></i>
				Lihat Demo
			</a>
			<a href="#cta" class="bg-transparent border-2 border-white text-white px-8 py-4 rounded-full font-semibold text-lg hover:bg-white hover:text-raga-green transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-1">
				<i class="fas fa-users mr-2"></i>
				Bergabung dengan RIT
			</a>
		</div>
		
		<!-- Scroll Indicator -->
		<div class="absolute bottom-8 left-1/2 transform -translate-x-1/2">
			<div class="animate-bounce">
				<i class="fas fa-chevron-down text-2xl opacity-70"></i>
			</div>
		</div>
	</div>
</section>
