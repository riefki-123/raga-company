<section id="cta" class="py-20 bg-gradient-to-br from-rit-cyan to-cyan-500 text-white">
	<div class="container mx-auto px-4 text-center">
		<div class="max-w-4xl mx-auto animate-fade-in">
			<!-- RIT Logo Placeholder -->
<div class="mb-8">
  <img src="rit.png" 
       alt="Logo UKM RIT" 
       class="mx-auto w-32 h-auto md:w-40 object-contain drop-shadow-lg" />
</div>
			</div>
			
			<h2 class="text-4xl md:text-5xl font-bold mb-6">
				Bergabung dengan UKM RIT
			</h2>
			
			<p class="text-xl md:text-2xl leading-relaxed mb-12 opacity-90">
