---
// Technology Stack Section
---

<section id="technology" class="py-20 bg-white">
	<div class="container mx-auto px-4">
		<div class="text-center mb-16 animate-fade-in">
			<h2 class="text-4xl md:text-5xl font-bold text-gray-800 mb-6">
				Teknologi yang Digunakan
			</h2>
			<div class="w-24 h-1 bg-raga-green mx-auto mb-8"></div>
		</div>
		
		<div class="grid grid-cols-2 md:grid-cols-4 gap-8 max-w-4xl mx-auto">
			<!-- Python -->
			<div class="text-center p-6 bg-gray-50 rounded-xl hover:shadow-lg transition-all duration-300 transform hover:-translate-y-2">
				<div class="w-20 h-20 bg-gradient-to-br from-blue-400 to-blue-600 rounded-2xl flex items-center justify-center mx-auto mb-4">
					<i class="fab fa-python text-white text-3xl"></i>
				</div>
				<h4 class="font-semibold text-gray-800">Python</h4>
				<p class="text-sm text-gray-600 mt-2">Backend & Processing</p>
			</div>
			
			<!-- OpenCV -->
			<div class="text-center p-6 bg-gray-50 rounded-xl hover:shadow-lg transition-all duration-300 transform hover:-translate-y-2">
				<div class="w-20 h-20 bg-gradient-to-br from-green-400 to-green-600 rounded-2xl flex items-center justify-center mx-auto mb-4">
					<i class="fas fa-eye text-white text-3xl"></i>
				</div>
				<h4 class="font-semibold text-gray-800">OpenCV</h4>
				<p class="text-sm text-gray-600 mt-2">Computer Vision</p>
			</div>
			
			<!-- MediaPipe -->
			<div class="text-center p-6 bg-gray-50 rounded-xl hover:shadow-lg transition-all duration-300 transform hover:-translate-y-2">
				<div class="w-20 h-20 bg-gradient-to-br from-purple-400 to-purple-600 rounded-2xl flex items-center justify-center mx-auto mb-4">
					<i class="fas fa-hand-paper text-white text-3xl"></i>
				</div>
				<h4 class="font-semibold text-gray-800">MediaPipe</h4>
				<p class="text-sm text-gray-600 mt-2">Pose Detection</p>
			</div>
			
			<!-- PPSSPP -->
			<div class="text-center p-6 bg-gray-50 rounded-xl hover:shadow-lg transition-all duration-300 transform hover:-translate-y-2">
				<div class="w-20 h-20 bg-gradient-to-br from-orange-400 to-orange-600 rounded-2xl flex items-center justify-center mx-auto mb-4">
					<i class="fas fa-gamepad text-white text-3xl"></i>
				</div>
				<h4 class="font-semibold text-gray-800">PPSSPP</h4>
				<p class="text-sm text-gray-600 mt-2">Game Emulator</p>
			</div>
		</div>
		
		<!-- Additional Tech Info -->
		<div class="mt-16 max-w-3xl mx-auto">
			<div class="bg-gradient-to-r from-raga-green/10 to-green-500/10 rounded-2xl p-8">
				<h3 class="text-2xl font-semibold text-gray-800 text-center mb-6">
					Arsitektur Sistem
				</h3>
				<div class="grid grid-cols-1 md:grid-cols-3 gap-6 text-center">
					<div>
						<div class="w-12 h-12 bg-raga-green rounded-full flex items-center justify-center mx-auto mb-3">
							<i class="fas fa-camera text-white text-xl"></i>
						</div>
						<h4 class="font-semibold text-gray-800 mb-2">Input Layer</h4>
						<p class="text-sm text-gray-600">Webcam menangkap gerakan real-time</p>
					</div>
					
					<div>
						<div class="w-12 h-12 bg-raga-green rounded-full flex items-center justify-center mx-auto mb-3">
							<i class="fas fa-brain text-white text-xl"></i>
						</div>
						<h4 class="font-semibold text-gray-800 mb-2">Processing Layer</h4>
						<p class="text-sm text-gray-600">AI menganalisis dan klasifikasi gerakan</p>
					</div>
					
					<div>
						<div class="w-12 h-12 bg-raga-green rounded-full flex items-center justify-center mx-auto mb-3">
							<i class="fas fa-keyboard text-white text-xl"></i>
						</div>
						<h4 class="font-semibold text-gray-800 mb-2">Output Layer</h4>
						<p class="text-sm text-gray-600">Konversi ke input keyboard game</p>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>