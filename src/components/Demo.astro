<section id="demo" class="py-20 bg-white">
	<div class="container mx-auto px-4">
		<div class="text-center mb-16 animate-fade-in">
			<h2 class="text-4xl md:text-5xl font-bold text-gray-800 mb-6">
				Lihat RAGA Beraksi
			</h2>
			<div class="w-24 h-1 bg-raga-green mx-auto mb-8"></div>
		</div>
		
		<div class="max-w-4xl mx-auto text-center">
			<div class="relative rounded-2xl overflow-hidden shadow-2xl mb-8 animate-slide-up">
  <video autoplay loop muted playsinline class="w-full h-auto">
    <source src="demo.mp4" type="video/mp4" />
    Browser Anda tidak mendukung video tag.
  </video>
</div>

			
			<!-- Demo Features -->
			<div class="grid grid-cols-1 md:grid-cols-3 gap-8 mt-12">
				<div class="text-center p-6 bg-gray-50 rounded-xl">
					<div class="w-16 h-16 bg-raga-green rounded-full flex items-center justify-center mx-auto mb-4">
						<i class="fas fa-camera text-white text-2xl"></i>
					</div>
					<h4 class="text-lg font-semibold text-gray-800 mb-2">Deteksi Real-time</h4>
					<p class="text-gray-600">Webcam mendeteksi gerakan tubuh secara langsung</p>
				</div>
				
				<div class="text-center p-6 bg-gray-50 rounded-xl">
					<div class="w-16 h-16 bg-raga-green rounded-full flex items-center justify-center mx-auto mb-4">
						<i class="fas fa-bolt text-white text-2xl"></i>
					</div>
					<h4 class="text-lg font-semibold text-gray-800 mb-2">Respon Cepat</h4>
					<p class="text-gray-600">Konversi gerakan ke input game tanpa delay</p>
				</div>
				
				<div class="text-center p-6 bg-gray-50 rounded-xl">
					<div class="w-16 h-16 bg-raga-green rounded-full flex items-center justify-center mx-auto mb-4">
						<i class="fas fa-gamepad text-white text-2xl"></i>
					</div>
					<h4 class="text-lg font-semibold text-gray-800 mb-2">Kontrol Intuitif</h4>
					<p class="text-gray-600">Gerakan alami menjadi kontrol game yang akurat</p>
				</div>
			</div>
		</div>
	</div>
</section>